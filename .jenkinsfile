pipeline {
  agent any
  options {
    timeout(time: 1, unit: 'HOURS')
    parallelsAlwaysFailFast()
  }
  stages {
    stage('Clean') { steps { sh 'git clean -ffdx' } }
    stage('Build') { steps { sh 'julia -e \'using Pkg; Pkg.build(; verbose = true)\'' } }
    stage('Run') {
      steps {
        sh 'julia --code-coverage=user -e \'using Pkg; Pkg.test("gcSolver")\''
        sh 'julia -e \'using Coverage; LCOV.writefile("coverage-lcov.info", process_folder())\''
      }
    }
  }
  post {
    always {
      cleanWs cleanWhenFailure: false, cleanWhenNotBuilt: false, cleanWhenUnstable: false
    }
	}
}